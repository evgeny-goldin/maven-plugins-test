<?xml version="1.0" encoding="UTF-8"?>

<project xmlns              = "http://maven.apache.org/POM/4.0.0"
         xmlns:xsi          = "http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation = "http://maven.apache.org/POM/4.0.0
                               http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.goldin.plugins.maven-plugins-test</groupId>
    <artifactId>maven-about-plugin</artifactId>
    <packaging>jar</packaging>
    <version>0.1-SNAPSHOT</version>
    <name>[${project.groupId}:${project.artifactId}:${project.version}]</name>


    <parent>
        <groupId>com.goldin.plugins.maven-plugins-test</groupId>
        <artifactId>main.tests</artifactId>
        <version>0.1-SNAPSHOT</version>
    </parent>


    <properties>
        <outputDir>${project.build.outputDirectory}</outputDir>
    </properties>

    <build>
        <plugins>

            <plugin>
                <groupId>com.goldin.plugins</groupId>
                <artifactId>maven-about-plugin</artifactId>
                <version>${plugins-version}</version>
                <executions>
                    <execution>
                        <id>create-about</id>
                        <phase>package</phase>
                        <goals>
                            <goal>create-about</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>create-about-2</id>
                        <phase>package</phase>
                        <goals>
                            <goal>create-about</goal>
                        </goals>
                        <configuration>
                            <dumpDependencies>true</dumpDependencies>
                            <prefix>About</prefix>
                            <fileName>fff.txt</fileName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>create-about-3</id>
                        <phase>package</phase>
                        <goals>
                            <goal>create-about</goal>
                        </goals>
                        <configuration>
                            <prefix>/</prefix>
                            <fileName>about-root.txt</fileName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>create-about-4</id>
                        <phase>package</phase>
                        <goals>
                            <goal>create-about</goal>
                        </goals>
                        <configuration>
                            <include>no-such-file.zip</include>
                            <failIfNotFound>false</failIfNotFound>
                        </configuration>
                    </execution>
                    <execution>
                        <id>create-about-5</id>
                        <phase>package</phase>
                        <goals>
                            <goal>create-about</goal>
                        </goals>
                        <configuration>
                            <directory>/aaaaaa</directory>
                            <failIfNotFound>false</failIfNotFound>
                        </configuration>
                    </execution>

                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <!-- http://evgeny-goldin.org/youtrack/issue/pl-433 -->
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

                    <execution>
                        <id>create-about-fail</id>
                        <phase>package</phase>
                        <goals>
                            <goal>create-about</goal>
                        </goals>
                        <configuration>
                            <fileName>....</fileName> <!-- Triggers an error -->
                            <failOnError>false</failOnError>
                        </configuration>
                    </execution>
                </executions>
            </plugin>


            <plugin>
                <groupId>com.goldin.plugins</groupId>
                <artifactId>maven-copy-plugin</artifactId>
                <version>${plugins-version}</version>
                <executions>
                    <execution>
                        <id>unpack-archive</id>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <phase>verify</phase>
                        <configuration>
                            <resource>
                                <targetPath>${outputDir}/unpack</targetPath>
                                <directory>${project.build.directory}</directory>
                                <include>*.jar</include>
                                <unpack>true</unpack>
                            </resource>
                        </configuration>
                    </execution>
                </executions>
            </plugin>


            <plugin>
                <groupId>com.goldin.plugins</groupId>
                <artifactId>maven-assert-plugin</artifactId>
                <version>${plugins-version}</version>
                <executions>
                    <execution>
                        <id>verify-files</id>
                        <goals>
                            <goal>assert</goal>
                        </goals>
                        <phase>verify</phase>
                        <configuration>
                            <assertFiles>
                                ${outputDir}/unpack/META-INF/about-${project.groupId}-${project.artifactId}-${project.version}.txt
                                ${outputDir}/unpack/About/fff.txt
                                ${outputDir}/unpack/about-root.txt
                            </assertFiles>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
