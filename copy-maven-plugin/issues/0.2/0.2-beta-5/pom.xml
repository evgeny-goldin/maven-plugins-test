            <version>1.394</version>
            <type>war</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jvnet.hudson.plugins</groupId>
            <artifactId>greenballs</artifactId>
            <version>1.6</version>
            <type>hpi</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jvnet.hudson.plugins</groupId>
            <artifactId>artifactory</artifactId>
            <version>1.4.1</version>
            <type>hpi</type>
            <scope>test</scope>
        </dependency>
    </dependencies>

</project>
