<?xml version="1.0" encoding="UTF-8"?>

<project xmlns              = "http://maven.apache.org/POM/4.0.0"
         xmlns:xsi          = "http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation = "http://maven.apache.org/POM/4.0.0
                               http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.goldin.plugins</groupId>
    <artifactId>maven-plugins-test.maven-hudson-plugin.wiki</artifactId>
    <packaging>pom</packaging>
    <version>0.1-SNAPSHOT</version>
    <name>[${project.groupId}:${project.artifactId}:${project.version}]</name>


    <parent>
        <groupId>com.goldin.plugins</groupId>
        <artifactId>maven-plugins-test.maven-hudson-plugin</artifactId>
        <version>0.1-SNAPSHOT</version>
    </parent>


    <build>
        <plugins>

            <plugin>
                <groupId>com.goldin.plugins</groupId>
                <artifactId>maven-hudson-plugin</artifactId>
                <version>${maven-hudson-plugin-version}</version>
                <executions>
                    <execution>
                        <id>generate-hudson-jobs</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${configs-dir}</outputDirectory>
                            <generationPom>http://github.com/evgeny-goldin/maven-plugins/blob/master/maven-hudson-plugin-test/pom.xml</generationPom>
                            <hudsonUrl>http://127.0.0.1:8080/hudson</hudsonUrl>
                            <svnRepositoryLocalBase>svn</svnRepositoryLocalBase>
                            <timestamp>false</timestamp>
                            <jobs>

                                <job>
                                    <id>JBoss EJB 3</id>
                                    <scmType>git</scmType>
                                    <mavenName>apache-maven-2.2.1</mavenName>
                                    <jdkName>jdk1.6.0_21</jdkName>
                                    <repository>
                                        <remote>git://gitorious.org/jboss-ejb3/jboss-ejb3-context.git</remote>
                                    </repository>
                                </job>

                                <job>
                                    <id>google-guice</id>
                                    <scmType>svn</scmType>
                                    <mavenName>apache-maven-2.2.1</mavenName>
                                    <jdkName>jdk1.6.0_21</jdkName>
                                    <repository>
                                        <remote>http://google-guice.googlecode.com/svn/trunk/</remote>
                                    </repository>
                                </job>

                            </jobs>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

</project>
