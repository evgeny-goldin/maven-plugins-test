<?xml version="1.0" encoding="UTF-8"?>

<project xmlns              = "http://maven.apache.org/POM/4.0.0"
         xmlns:xsi          = "http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation = "http://maven.apache.org/POM/4.0.0
                               http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.goldin.plugins.maven-plugins-test</groupId>
    <artifactId>maven-hudson-plugin.bugfixes-0.2-beta-2</artifactId>
    <packaging>pom</packaging>
    <version>0.1-SNAPSHOT</version>
    <name>[${project.groupId}:${project.artifactId}:${project.version}]</name>


    <parent>
        <groupId>com.goldin.plugins.maven-plugins-test</groupId>
        <artifactId>maven-hudson-plugin</artifactId>
        <version>0.1-SNAPSHOT</version>
    </parent>


    <properties>
        <configs-outputDirectory>${user.home}/.hudson/jobs</configs-outputDirectory>
        <maven-plugins-repo>git@github.com:evgeny-goldin/maven-plugins.git</maven-plugins-repo>
    </properties>


    <build>
        <plugins>

            <plugin>
                <groupId>com.goldin.plugins</groupId>
                <artifactId>maven-hudson-plugin</artifactId>
                <version>${maven-hudson-plugin-version}</version>
                <executions>
                    <execution>
                        <id>generate-hudson-jobs</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${configs-outputDirectory}</outputDirectory>
                            <generationPom>http://github.com/evgeny-goldin/maven-plugins-test/blob/master/maven-hudson-plugin/bugfixes-0.2-beta-2/pom.xml</generationPom>
                            <hudsonUrl>http://evgeny-goldin.org/hudson</hudsonUrl>
                            <timestamp>false</timestamp>
                            <jobs>
                                <job>
                                    <id>base-git</id>
                                    <abstract>true</abstract>
                                    <scmType>git</scmType>
                                    <mavenName>apache-maven-2.2.1</mavenName>
                                    <jdkName>jdk1.6.0_21</jdkName>
                                </job>

                                <job>
                                    <id>github-maven-plugins-master-pl-211</id>
                                    <parent>base-git</parent>
                                    <repository>
                                        <remote>${maven-plugins-repo}</remote>
                                    </repository>
                                    <properties>
                                    <![CDATA[
                                        <hudson.queueSorter.PrioritySorterJobProperty>
                                            <priority>100</priority>
                                        </hudson.queueSorter.PrioritySorterJobProperty>
                                        <hudson.plugins.jiraapi.JiraProjectKeyJobProperty>
                                            <key>MS</key>
                                        </hudson.plugins.jiraapi.JiraProjectKeyJobProperty>
                                    ]]>
                                    </properties>
                                </job>

                                <job>
                                    <id>github-maven-plugins-dev-pl-231</id>
                                    <parent>base-git</parent>
                                    <repository>
                                        <remote>${maven-plugins-repo}</remote>
                                        <gitBranch>dev</gitBranch>
                                    </repository>
                                    <properties>
                                    <![CDATA[
                                        <hudson.security.AuthorizationMatrixProperty>
                                            <permission>hudson.model.Item.Read:bob</permission>
                                            <permission>hudson.model.Item.Read:mark</permission>
                                            <permission>hudson.model.Item.Build:ben</permission>
                                            <permission>hudson.model.Item.Build:john</permission>
                                            <permission>hudson.model.Run.Update:austin</permission>
                                            <permission>hudson.model.Run.Update:franck</permission>
                                            <permission>hudson.model.Item.Workspace:mike</permission>
                                            <permission>hudson.model.Item.Workspace:milles</permission>
                                            <permission>hudson.model.Item.Configure:stuart</permission>
                                            <permission>hudson.model.Item.Configure:mary</permission>
                                        </hudson.security.AuthorizationMatrixProperty>
                                    ]]>
                                    </properties>
                                </job>

                            </jobs>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
            <!-- Verifying configs generated have not changed -->
            <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

            <plugin>
                <groupId>com.goldin.plugins</groupId>
                <artifactId>maven-assert-plugin</artifactId>
                <version>${maven-assert-plugin-version}</version>
                <executions>
                    <execution>
                        <id>verify-configs</id>
                        <phase>integration-test</phase>
                        <goals>
                            <goal>assert</goal>
                        </goals>
                        <configuration>
                            <endOfLine>windows</endOfLine>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

</project>
