<?xml version="1.0" encoding="UTF-8"?>

<project xmlns              = "http://maven.apache.org/POM/4.0.0"
         xmlns:xsi          = "http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation = "http://maven.apache.org/POM/4.0.0
                               http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.goldin.plugins.maven-plugins-test</groupId>
    <artifactId>maven-jenkins-plugin.jenkins-book</artifactId>
    <packaging>pom</packaging>
    <version>0.1-SNAPSHOT</version>
    <name>[${project.groupId}:${project.artifactId}:${project.version}]</name>


    <properties>
        <configs-outputDirectory>${user.home}/.jenkins/jobs</configs-outputDirectory>
        <maven-plugins-repo>git@github.com:evgeny-goldin/maven-plugins.git</maven-plugins-repo>
        <jobsToTest>7</jobsToTest>
    </properties>


    <parent>
        <groupId>com.goldin.plugins.maven-plugins-test</groupId>
        <artifactId>maven-jenkins-plugin</artifactId>
        <version>0.1-SNAPSHOT</version>
    </parent>


    <build>
        <plugins>

            <plugin>
                <groupId>com.goldin.plugins</groupId>
                <artifactId>maven-jenkins-plugin</artifactId>
                <version>${plugins-version}</version>
                <executions>
                    <execution>
                        <id>example-job</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${user.home}/.jenkins/jobs</outputDirectory>
                            <generationPom>
                                http://github.com/evgeny-goldin/maven-plugins-test/blob/master/maven-jenkins-plugin/jenkins-book/pom.xml
                            </generationPom>
                            <jenkinsUrl>http://evgeny-goldin.org/jenkins</jenkinsUrl>
                            <timestamp>false</timestamp>
                            <job>
                                <id>maven-plugins</id>
                                <scmType>git</scmType>
                                <mavenName>apache-maven-3</mavenName>
                                <jdkName>jdk1.6.0</jdkName>
                                <repository>
                                    <remote>git://github.com/evgeny-goldin/maven-plugins.git</remote>
                                </repository>
                            </job>
                        </configuration>
                    </execution>

                    <execution>
                        <id>standalone-jobs</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${user.home}/.jenkins/jobs</outputDirectory>
                            <generationPom>
                                http://github.com/evgeny-goldin/maven-plugins-test/blob/master/maven-jenkins-plugin/jenkins-book/pom.xml
                            </generationPom>
                            <jenkinsUrl>http://evgeny-goldin.org/jenkins</jenkinsUrl>
                            <timestamp>false</timestamp>
                            <jobs>
                                <job>
                                    <id>google-guice-trunk</id>
                                    <description>Building Google Guice trunk</description>
                                    <descriptionTable>
                                        <row>
                                            <key>Project Page</key>
                                            <value>
                                                <![CDATA[
                                                <a href="http://code.google.com/p/google-guice/">
                                                    <b><code>code.google.com/p/google-guice</code></b>
                                                </a>
                                                ]]>
                                            </value>
                                            <escapeHTML>false</escapeHTML>
                                            <bottom>false</bottom>
                                        </row>
                                    </descriptionTable>
                                    <jdkName>jdk1.6.0</jdkName>
                                    <mavenName>apache-maven-3</mavenName>
                                    <mavenOpts>-Xmx256m -XX:MaxPermSize=128m</mavenOpts>
                                    <daysToKeep>5</daysToKeep>
                                    <useUpdate>false</useUpdate>
                                    <mavenGoals>-e clean install</mavenGoals>
                                    <repository>
                                        <remote>http://google-guice.googlecode.com/svn/trunk/</remote>
                                    </repository>
                                    <mail>
                                        <recipients>jenkins@evgeny-goldin.org</recipients>
                                    </mail>
                                </job>

                                <job>
                                    <id>jenkins-master</id>
                                    <jdkName>jdk1.6.0</jdkName>
                                    <numToKeep>5</numToKeep>
                                    <mavenName>apache-maven-3</mavenName>
                                    <scmType>git</scmType>
                                    <repository>
                                        <remote>git://github.com/jenkinsci/jenkins.git</remote>
                                    </repository>
                                    <mail>
                                        <recipients>jenkins@evgeny-goldin.org</recipients>
                                        <sendForUnstable>false</sendForUnstable>
                                        <sendToIndividuals>false</sendToIndividuals>
                                    </mail>
                                </job>
                            </jobs>
                        </configuration>
                    </execution>

                    <execution>
                        <id>inheritance-jobs</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${user.home}/.jenkins/jobs</outputDirectory>
                            <generationPom>
                                http://github.com/evgeny-goldin/maven-plugins-test/blob/master/maven-jenkins-plugin/jenkins-book/pom.xml
                            </generationPom>
                            <jenkinsUrl>http://evgeny-goldin.org/jenkins</jenkinsUrl>
                            <timestamp>false</timestamp>
                            <jobs>

                                <job>
                                    <id>google-guice-inheritance-base</id>
                                    <abstract>true</abstract>
                                    <jdkName>jdk1.6.0</jdkName>
                                    <mavenName>apache-maven-3</mavenName>
                                    <daysToKeep>5</daysToKeep>
                                    <useUpdate>true</useUpdate>
                                    <mavenGoals>-B -e -U clean install</mavenGoals>
                                    <mail><recipients>jenkins@evgeny-goldin.org</recipients></mail>
                                </job>

                                <job>
                                    <id>google-guice-inheritance-trunk</id>
                                    <parent>google-guice-inheritance-base</parent>
                                    <repository>
                                        <remote>http://google-guice.googlecode.com/svn/trunk/</remote>
                                    </repository>
                                    <invoke>
                                        <jobs>google-guice-inheritance-3.0-rc3, google-guice-inheritance-2.0-maven</jobs>
                                    </invoke>
                                </job>

                                <job>
                                    <id>google-guice-inheritance-3.0-rc3</id>
                                    <parent>google-guice-inheritance-base</parent>
                                    <repository>
                                        <remote>http://google-guice.googlecode.com/svn/tags/3.0-rc3/</remote>
                                    </repository>
                                </job>

                                <job>
                                    <id>google-guice-inheritance-2.0-maven</id>
                                    <parent>google-guice-inheritance-base</parent>
                                    <mavenName>apache-maven-2</mavenName>
                                    <repository>
                                        <remote>http://google-guice.googlecode.com/svn/branches/2.0-maven/</remote>
                                    </repository>
                                </job>
                            </jobs>
                        </configuration>
                    </execution>

                    <execution>
                        <id>free-style-jobs</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${user.home}/.jenkins/jobs</outputDirectory>
                            <generationPom>
                                http://github.com/evgeny-goldin/maven-plugins-test/blob/master/maven-jenkins-plugin/jenkins-book/pom.xml
                            </generationPom>
                            <jenkinsUrl>http://evgeny-goldin.org/jenkins</jenkinsUrl>
                            <timestamp>false</timestamp>
                            <job>
                                <id>free-style</id>
                                <jobType>free</jobType>
                                <scmType>git</scmType>
                                <repository>
                                    <remote>git://github.com/evgeny-goldin/maven-plugins-test.git</remote>
                                </repository>
                                <tasks>
                                    <shell>
                                        <command>
pwd
rm -rf ${localM2Repo}/com/goldin
ls -al
du -hs .
                                        </command>
                                    </shell>
                                    <maven>
                                        <mavenName>apache-maven-3</mavenName>
                                        <jvmOptions>-Xmx256m -XX:MaxPermSize=128m -Dmaven.repo.local=${localM2Repo}</jvmOptions>
                                        <properties>plugins-version = ${plugins-version-for-jobs}</properties>
                                    </maven>
                                    <shell>
                                        <command>du -hs .</command>
                                    </shell>
                                </tasks>
                            </job>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

</project>
