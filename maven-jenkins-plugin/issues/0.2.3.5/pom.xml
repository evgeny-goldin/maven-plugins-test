<?xml version="1.0" encoding="UTF-8"?>

<project xmlns              = "http://maven.apache.org/POM/4.0.0"
         xmlns:xsi          = "http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation = "http://maven.apache.org/POM/4.0.0
                               http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.goldin.plugins.maven-plugins-test</groupId>
    <artifactId>maven-jenkins-plugin.issues-0.2.3.5</artifactId>
    <packaging>pom</packaging>
    <version>0.1-SNAPSHOT</version>
    <name>[${project.groupId}:${project.artifactId}:${project.version}]</name>


    <parent>
        <groupId>com.goldin.plugins.maven-plugins-test</groupId>
        <artifactId>maven-jenkins-plugin.issues</artifactId>
        <version>0.1-SNAPSHOT</version>
    </parent>


    <properties>
        <jobsToTest>3</jobsToTest>
    </properties>


    <build>
        <plugins>

            <plugin>
                <groupId>com.goldin.plugins</groupId>
                <artifactId>maven-jenkins-plugin</artifactId>
                <version>${plugins-version}</version>
                <executions>
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <!-- http://evgeny-goldin.org/youtrack/issue/pl-498 -->
                    <!-- "<triggers> don't work with abstract jobs"     -->
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <execution>
                        <id>http://evgeny-goldin.org/youtrack/issue/pl-498</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${configs-outputDirectory}</outputDirectory>
                            <generationPom>https://github.com/evgeny-goldin/maven-plugins-test/blob/master/maven-jenkins-plugin/issues/0.2.3.5/pom.xml</generationPom>
                            <jenkinsUrl>http://evgeny-goldin.org/jenkins</jenkinsUrl>
                            <timestamp>false</timestamp>
                            <jobs>
                                <job>
                                    <id>pl-498-1</id>
                                    <abstract>true</abstract>
                                    <scmType>svn</scmType>
                                    <jobType>maven</jobType>
                                    <jdkName>jdk1.6.0</jdkName>
                                    <mavenName>apache-maven-3</mavenName>
                                    <useUpdate>true</useUpdate>
                                    <doRevert>false</doRevert>
                                    <daysToKeep>10</daysToKeep>
                                    <numToKeep>10</numToKeep>
                                    <mavenGoals>-B -e clean install</mavenGoals>
                                    <buildOnSNAPSHOT>true</buildOnSNAPSHOT>
                                    <triggers>
                                        <trigger>
                                            <type>scm</type>
                                            <description>Scheduled to run at 1 AM nightly</description>
                                            <expression>0 1 * * *</expression>
                                        </trigger>
                                    </triggers>
                                </job>
                                <job>
                                    <id>pl-498-2</id>
                                    <parent>pl-498-1</parent>
                                    <repository>
                                        <remote>http://google-guice.googlecode.com/svn/trunk</remote>
                                    </repository>
                                </job>
                                <job>
                                    <id>pl-498-3</id>
                                    <parent>pl-498-1</parent>
                                    <repository>
                                        <remote>http://google-guice.googlecode.com/svn/tags/3.0-rc3</remote>
                                    </repository>
                                </job>
                                <job>
                                    <id>pl-498-4</id>
                                    <parent>pl-498-1</parent>
                                    <repository>
                                        <remote>http://google-guice.googlecode.com/svn/tags/3.0</remote>
                                    </repository>
                                </job>
                            </jobs>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
