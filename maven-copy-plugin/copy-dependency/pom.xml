<?xml version="1.0" encoding="UTF-8"?>

<project xmlns              = "http://maven.apache.org/POM/4.0.0"
         xmlns:xsi          = "http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation = "http://maven.apache.org/POM/4.0.0
                               http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.goldin.plugins.maven-plugins-test</groupId>
    <artifactId>maven-copy-plugin.copy-dependency</artifactId>
    <packaging>jar</packaging>
    <version>0.1-SNAPSHOT</version>
    <name>[${project.groupId}:${project.artifactId}:${project.version}]</name>


    <parent>
        <groupId>com.goldin.plugins.maven-plugins-test</groupId>
        <artifactId>maven-copy-plugin</artifactId>
        <version>0.1-SNAPSHOT</version>
    </parent>


    <build>
        <plugins>

            <plugin>
                <groupId>com.goldin.plugins</groupId>
                <artifactId>maven-copy-plugin</artifactId>
                <version>${maven-copy-plugin-version}</version>
                <executions>
                    <execution>
                        <id>test-dependency-copy</id>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <phase>validate</phase>
                        <configuration>
                            <resources>
                                <resource>
                                    <targetPath>${project.build.directory}/compile-deps-transitive-1</targetPath>
                                    <dependency>
                                        <includeScope>compile</includeScope>
                                    </dependency>
                                </resource>
                                <resource>
                                    <targetPath>${project.build.directory}/compile-deps-transitive-2</targetPath>
                                    <dependency>
                                        <includeScope>compile</includeScope>
                                        <excludeTransitive>false</excludeTransitive>
                                    </dependency>
                                </resource>
                                <resource>
                                    <targetPath>${project.build.directory}/compile-deps-no-transitive</targetPath>
                                    <dependency>
                                        <includeScope>compile</includeScope>
                                        <excludeTransitive>true</excludeTransitive>
                                    </dependency>
                                </resource>
                                <resource>
                                    <targetPath>${project.build.directory}/test-deps-transitive-1</targetPath>
                                    <dependency>
                                        <includeScope>test</includeScope>
                                    </dependency>
                                </resource>
                                <resource>
                                    <targetPath>${project.build.directory}/test-deps-transitive-2</targetPath>
                                    <dependency>
                                        <includeScope>test</includeScope>
                                        <excludeTransitive>false</excludeTransitive>
                                    </dependency>
                                </resource>
                                <resource>
                                    <targetPath>${project.build.directory}/test-deps-no-transitive</targetPath>
                                    <dependency>
                                        <includeScope>test</includeScope>
                                        <excludeTransitive>true</excludeTransitive>
                                    </dependency>
                                </resource>
                                <resource>
                                    <targetPath>${project.build.directory}/test-deps-no-transitive-no-compile</targetPath>
                                    <dependency>
                                        <excludeScope>compile</excludeScope>
                                        <excludeTransitive>true</excludeTransitive>
                                    </dependency>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>com.goldin.plugins</groupId>
                <artifactId>maven-assert-plugin</artifactId>
                <version>${maven-assert-plugin-version}</version>
                <executions>
                    <execution>
                        <id>assert-dependency-copy</id>
                        <goals>
                            <goal>assert</goal>
                        </goals>
                        <phase>initialize</phase>
                        <configuration>
                            <assertFiles>
                                ${project.build.directory}/compile-deps-transitive-1/commons-logging-1.1.1.jar
                                ${project.build.directory}/compile-deps-transitive-1/spring-asm-${spring-version}.jar
                                ${project.build.directory}/compile-deps-transitive-1/spring-core-${spring-version}.jar

                                ${project.build.directory}/compile-deps-no-transitive/spring-core-${spring-version}.jar

                                ${project.build.directory}/test-deps-transitive-1/junit-${junit-version}.jar
                                ${project.build.directory}/test-deps-transitive-1/commons-logging-1.1.1.jar
                                ${project.build.directory}/test-deps-transitive-1/spring-asm-${spring-version}.jar
                                ${project.build.directory}/test-deps-transitive-1/spring-core-${spring-version}.jar

                                ${project.build.directory}/test-deps-no-transitive/spring-core-${spring-version}.jar
                                ${project.build.directory}/test-deps-no-transitive/junit-${junit-version}.jar

                                ${project.build.directory}/test-deps-no-transitive-no-compile/junit-${junit-version}.jar
                            </assertFiles>
                            <assertEqual>
                                ${project.build.directory}/compile-deps-transitive-1|${project.build.directory}/compile-deps-transitive-2
                                ${project.build.directory}/test-deps-transitive-1|${project.build.directory}/test-deps-transitive-2
                            </assertEqual>
                            <assertGroovy>
                                new File( project.build.directory, 'compile-deps-transitive-1'  ).listFiles().size() == 3
                                new File( project.build.directory, 'compile-deps-no-transitive' ).listFiles().size() == 1
                                new File( project.build.directory, 'test-deps-transitive-1'     ).listFiles().size() == 4
                                new File( project.build.directory, 'test-deps-no-transitive'    ).listFiles().size() == 2
                                new File( project.build.directory, 'test-deps-no-transitive-no-compile' ).listFiles().size() == 1
                            </assertGroovy>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


    <dependencies>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-core</artifactId>
            <version>${spring-version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit-version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
