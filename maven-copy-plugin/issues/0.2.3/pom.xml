<?xml version="1.0" encoding="UTF-8"?>

<project xmlns              = "http://maven.apache.org/POM/4.0.0"
         xmlns:xsi          = "http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation = "http://maven.apache.org/POM/4.0.0
                               http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.goldin.plugins.maven-plugins-test</groupId>
    <artifactId>maven-copy-plugin.issues.0.2.3</artifactId>
    <packaging>jar</packaging>
    <version>0.1-SNAPSHOT</version>
    <name>[${project.groupId}:${project.artifactId}:${project.version}]</name>


    <parent>
        <groupId>com.goldin.plugins.maven-plugins-test</groupId>
        <artifactId>maven-copy-plugin.issues</artifactId>
        <version>0.1-SNAPSHOT</version>
    </parent>


    <properties>
        <outputDir>${project.build.outputDirectory}</outputDir>
        <targetRoots>${outputDir}/tr1, ${outputDir}/tr2, ${outputDir}/tr3</targetRoots>
    </properties>


    <build>
        <plugins>

            <plugin>
                <groupId>com.goldin.plugins</groupId>
                <artifactId>maven-copy-plugin</artifactId>
                <version>${plugins-version}</version>
                <executions>
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <!-- http://evgeny-goldin.org/youtrack/issue/pl-397:           -->
                    <!-- "Unnecessary <mkdir> + files copy - files are not copied" -->
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <execution>
                        <id>http://evgeny-goldin.org/youtrack/issue/pl-397</id>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <phase>initialize</phase>
                        <configuration>
                            <resource>
                                <targetPath>${outputDir}/pl-397</targetPath>
                                <file>${project.basedir}/pom.xml</file>
                                <mkdir>true</mkdir>
                            </resource>
                        </configuration>
                    </execution>
                    <execution>
                        <id>http://evgeny-goldin.org/youtrack/issue/pl-395</id>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <phase>initialize</phase>
                        <configuration>
                            <resources>
                                <resource>
                                    <targetPath>${outputDir}/pl-395</targetPath>
                                    <file>${project.basedir}/pom.xml</file>
                                </resource>
                                <resource>
                                    <targetPath>${outputDir}/pl-395</targetPath>
                                    <file>${outputDir}/pl-395/pom.xml</file>
                                    <process>println ( "POM size is [" + file.size() + "] bytes" )</process>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>http://evgeny-goldin.org/youtrack/issue/pl-434</id>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <phase>initialize</phase>
                        <configuration>
                            <resources>
                                <resource>
                                    <targetRoots>${targetRoots}</targetRoots>
                                    <targetPath>pl-434-1</targetPath>
                                    <file>${project.basedir}/pom.xml</file>
                                </resource>
                                <resource>
                                    <targetRoots>${targetRoots}</targetRoots>
                                    <targetPaths>
                                        <targetPath>pl-434-2</targetPath>
                                        <targetPath>pl-434-3</targetPath>
                                        <targetPath>pl-434-4</targetPath>
                                    </targetPaths>
                                    <dependency>
                                        <groupId>org.jvnet.hudson.plugins</groupId>
                                        <artifactId>greenballs</artifactId>
                                        <version>1.6</version>
                                        <optional>true</optional>
                                        <type>hpi</type>
                                    </dependency>
                                    <unpack>true</unpack>
                                </resource>
                                <resource>
                                    <targetRoots><!-- Nothing --></targetRoots>
                                    <targetPath>${outputDir}/pl-434-5</targetPath>
                                    <file>${project.basedir}/pom.xml</file>
                                </resource>
                                <resource>
                                    <targetRoots> , </targetRoots>
                                    <targetPath>${outputDir}/pl-434-6</targetPath>
                                    <file>${project.basedir}/pom.xml</file>
                                </resource>
                                <resource>
                                    <targetRoots> ${outputDir}/aa , </targetRoots>
                                    <targetPath>pl-434-7</targetPath>
                                    <file>${project.basedir}/pom.xml</file>
                                </resource>
                                <resource>
                                    <targetRoots> , ${outputDir}/bb , </targetRoots>
                                    <targetPath>pl-434-8</targetPath>
                                    <file>${project.basedir}/pom.xml</file>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>com.goldin.plugins</groupId>
                <artifactId>maven-assert-plugin</artifactId>
                <version>${plugins-version}</version>
                <executions>
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <!-- http://evgeny-goldin.org/youtrack/issue/pl-397 -->
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <execution>
                        <id>http://evgeny-goldin.org/youtrack/issue/pl-397</id>
                        <goals>
                            <goal>assert</goal>
                        </goals>
                        <phase>test</phase>
                        <configuration>
                            <assertFiles>
                                ${outputDir}/pl-397
                                ${outputDir}/pl-397/pom.xml
                                ${outputDir}/pl-395
                                ${outputDir}/pl-395/pom.xml
                            </assertFiles>
                        </configuration>
                    </execution>
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <!-- http://evgeny-goldin.org/youtrack/issue/pl-434 -->
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <execution>
                        <id>http://evgeny-goldin.org/youtrack/issue/pl-434</id>
                        <goals>
                            <goal>assert</goal>
                        </goals>
                        <phase>test</phase>
                        <configuration>
                            <assertFiles>
                                ${outputDir}/tr1
                                ${outputDir}/tr1/pl-434-1
                                ${outputDir}/tr1/pl-434-2
                                ${outputDir}/tr1/pl-434-3
                                ${outputDir}/tr1/pl-434-4
                                ${outputDir}/tr2
                                ${outputDir}/tr2/pl-434-1
                                ${outputDir}/tr2/pl-434-2
                                ${outputDir}/tr2/pl-434-3
                                ${outputDir}/tr2/pl-434-4
                                ${outputDir}/tr3
                                ${outputDir}/tr3/pl-434-1
                                ${outputDir}/tr3/pl-434-2
                                ${outputDir}/tr3/pl-434-3
                                ${outputDir}/tr3/pl-434-4
                                ${outputDir}/pl-434-5
                                ${outputDir}/pl-434-6
                                ${outputDir}/aa
                                ${outputDir}/aa/pl-434-7
                                ${outputDir}/bb
                                ${outputDir}/bb/pl-434-8
                            </assertFiles>
                            <assertEqual>
                                ${outputDir}/tr1|${outputDir}/tr2
                                ${outputDir}/tr2|${outputDir}/tr3
                                ${outputDir}/tr3|${outputDir}/tr1

                                ${outputDir}/pl-434-5|${outputDir}/pl-434-6
                                ${outputDir}/pl-434-6|${outputDir}/aa/pl-434-7
                                ${outputDir}/aa/pl-434-7|${outputDir}/bb/pl-434-8
                                ${outputDir}/bb/pl-434-8|${outputDir}/pl-434-5
                            </assertEqual>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
