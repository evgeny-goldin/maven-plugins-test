<?xml version="1.0" encoding="UTF-8"?>

<project xmlns              = "http://maven.apache.org/POM/4.0.0"
         xmlns:xsi          = "http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation = "http://maven.apache.org/POM/4.0.0
                               http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.github.goldin.maven-plugins-test</groupId>
    <artifactId>jenkins-maven-plugin.issues-0.2.4</artifactId>
    <packaging>pom</packaging>
    <version>0.1-SNAPSHOT</version>
    <name>[${project.groupId}:${project.artifactId}:${project.version}]</name>


    <parent>
        <groupId>com.github.goldin.maven-plugins-test</groupId>
        <artifactId>jenkins-maven-plugin.issues</artifactId>
        <version>0.1-SNAPSHOT</version>
    </parent>


    <properties>
        <jobsToTest>9</jobsToTest>
    </properties>


    <build>
        <plugins>

            <plugin>
                <groupId>com.github.goldin</groupId>
                <artifactId>jenkins-maven-plugin</artifactId>
                <version>${plugins-version}</version>
                <executions>
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <!-- http://evgeny-goldin.org/youtrack/issue/pl-613           -->
                    <!-- "New extension points: "prebuilders" and "postbuilders"  -->
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <execution>
                        <id>http://evgeny-goldin.org/youtrack/issue/pl-613</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${configs-outputDirectory}</outputDirectory>
                            <generationPom>https://github.com/evgeny-goldin/maven-plugins-test/blob/master/jenkins-maven-plugin/issues/0.2.4/pom.xml</generationPom>
                            <jenkinsUrl>http://evgeny-goldin.org/jenkins</jenkinsUrl>
                            <timestamp>false</timestamp>
                            <jobs>
                                <job>
                                    <id>pl-613-base</id>
                                    <abstract>true</abstract>
                                    <scmType>git</scmType>
                                    <mavenName>apache-maven-3</mavenName>
                                    <repository>
                                        <remote>${maven-plugins-repo}</remote>
                                    </repository>
                                    <prebuildersTasks>
                                        <shell>
                                            <command>ls -al</command>
                                        </shell>
                                        <shell>
                                            <command>pwd</command>
                                        </shell>
                                        <maven>
                                            <targets>clean</targets>
                                        </maven>
                                    </prebuildersTasks>
                                    <postbuildersTasks>
                                        <maven>
                                            <targets>clean</targets>
                                        </maven>
                                        <shell>
                                            <command>pwd</command>
                                        </shell>
                                        <shell>
                                            <command>ls -al</command>
                                        </shell>
                                    </postbuildersTasks>
                                    <prebuilders>
                                        <![CDATA[ <!-- prebuilders-1 --> ]]>
                                    </prebuilders>
                                    <postbuilders>
                                        <![CDATA[ <!-- postbuilders-2 --> ]]>
                                    </postbuilders>
                                </job>
                                <job>
                                    <id>pl-613-1</id>
                                    <parent>pl-613-base</parent>
                                    <appendTasks>true</appendTasks>
                                    <prebuildersTasks>
                                        <shell>
                                            <command>ls</command>
                                        </shell>
                                        <maven>
                                            <targets>dependency:tree</targets>
                                        </maven>
                                    </prebuildersTasks>
                                    <postbuildersTasks>
                                        <shell>
                                            <command>ls</command>
                                        </shell>
                                    </postbuildersTasks>
                                    <runPostStepsIfResult>all</runPostStepsIfResult>
                                </job>
                                <job>
                                    <id>pl-613-2</id>
                                    <parent>pl-613-base</parent>
                                    <prebuilders>
                                        <![CDATA[ <!-- prebuilders-3 --> ]]>
                                    </prebuilders>
                                    <postbuilders>
                                        <![CDATA[ <!-- postbuilders-4 --> ]]>
                                    </postbuilders>
                                    <runPostStepsIfResult>success</runPostStepsIfResult>
                                </job>
                                <job>
                                    <id>pl-613-3</id>
                                    <parent>pl-613-base</parent>
                                    <prebuildersTasks>
                                        <shell>
                                            <command>ls</command>
                                        </shell>
                                    </prebuildersTasks>
                                    <postbuildersTasks>
                                        <shell>
                                            <command>ls</command>
                                        </shell>
                                    </postbuildersTasks>
                                </job>
                            </jobs>
                        </configuration>
                    </execution>
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <!-- http://evgeny-goldin.org/youtrack/issue/pl-619 -->
                    <!-- Support "Advanced Project Options"             -->
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <execution>
                        <id>http://evgeny-goldin.org/youtrack/issue/pl-619</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${configs-outputDirectory}</outputDirectory>
                            <generationPom>https://github.com/evgeny-goldin/maven-plugins-test/blob/master/jenkins-maven-plugin/issues/0.2.4/pom.xml</generationPom>
                            <jenkinsUrl>http://evgeny-goldin.org/jenkins</jenkinsUrl>
                            <timestamp>false</timestamp>
                            <jobs>
                                <job>
                                    <id>pl-619-base</id>
                                    <displayName>NOT-INHERITED</displayName>
                                    <abstract>true</abstract>
                                    <mavenName>apache-maven-3</mavenName>
                                    <quietPeriod>1</quietPeriod>
                                    <scmCheckoutRetryCount>2</scmCheckoutRetryCount>
                                    <blockBuildWhenDownstreamBuilding>true</blockBuildWhenDownstreamBuilding>
                                    <blockBuildWhenUpstreamBuilding>true</blockBuildWhenUpstreamBuilding>
                                    <scmType>git</scmType>
                                    <repository>
                                        <remote>${maven-plugins-repo}</remote>
                                    </repository>
                                </job>
                                <job>
                                    <id>pl-619-1</id>
                                    <displayName>pl619</displayName>
                                    <mavenName>apache-maven-3</mavenName>
                                    <quietPeriod>3</quietPeriod>
                                    <scmCheckoutRetryCount>4</scmCheckoutRetryCount>
                                    <scmType>git</scmType>
                                    <repository>
                                        <remote>${maven-plugins-repo}</remote>
                                    </repository>
                                </job>
                                <job>
                                    <id>pl-619-2</id>
                                    <parent>pl-619-base</parent>
                                </job>
                                <job>
                                    <id>pl-619-3</id>
                                    <parent>pl-619-base</parent>
                                    <displayName>pl619-2</displayName>
                                    <quietPeriod>5</quietPeriod>
                                    <scmCheckoutRetryCount>6</scmCheckoutRetryCount>
                                    <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
                                </job>
                            </jobs>
                        </configuration>
                    </execution>
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <!-- http://evgeny-goldin.org/youtrack/issue/pl-623             -->
                    <!-- "Add support for artifactNumToKeep and artifactDaysToKeep" -->
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <execution>
                        <id>http://evgeny-goldin.org/youtrack/issue/pl-623</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${configs-outputDirectory}</outputDirectory>
                            <generationPom>https://github.com/evgeny-goldin/maven-plugins-test/blob/master/jenkins-maven-plugin/issues/0.2.4/pom.xml</generationPom>
                            <jenkinsUrl>http://evgeny-goldin.org/jenkins</jenkinsUrl>
                            <timestamp>false</timestamp>
                            <jobs>
                                <job>
                                    <id>pl-623-base</id>
                                    <abstract>true</abstract>
                                    <mavenName>apache-maven-3</mavenName>
                                    <scmType>git</scmType>
                                    <repository>
                                        <remote>${maven-plugins-repo}</remote>
                                    </repository>
                                    <daysToKeep>1</daysToKeep>
                                    <numToKeep>2</numToKeep>
                                    <artifactDaysToKeep>3</artifactDaysToKeep>
                                    <artifactNumToKeep>4</artifactNumToKeep>
                                </job>
                                <job>
                                    <id>pl-623-1</id>
                                    <mavenName>apache-maven-3</mavenName>
                                    <scmType>git</scmType>
                                    <repository>
                                        <remote>${maven-plugins-repo}</remote>
                                    </repository>
                                    <numToKeep>22</numToKeep>
                                    <artifactNumToKeep>44</artifactNumToKeep>
                                </job>
                                <job>
                                    <id>pl-623-2</id>
                                    <parent>pl-623-base</parent>
                                </job>
                                <job>
                                    <id>pl-623-3</id>
                                    <parent>pl-623-base</parent>
                                    <artifactDaysToKeep>5</artifactDaysToKeep>
                                    <artifactNumToKeep>6</artifactNumToKeep>
                                </job>
                            </jobs>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
