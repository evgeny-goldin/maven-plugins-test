<?xml version="1.0" encoding="UTF-8"?>

<project xmlns              = "http://maven.apache.org/POM/4.0.0"
         xmlns:xsi          = "http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation = "http://maven.apache.org/POM/4.0.0
                               http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.github.goldin.maven-plugins-test</groupId>
    <artifactId>jenkins-maven-plugin.issues-0.2.5.1</artifactId>
    <packaging>pom</packaging>
    <version>0.1-SNAPSHOT</version>
    <name>[${project.groupId}:${project.artifactId}:${project.version}]</name>


    <parent>
        <groupId>com.github.goldin.maven-plugins-test</groupId>
        <artifactId>jenkins-maven-plugin.issues</artifactId>
        <version>0.1-SNAPSHOT</version>
    </parent>


    <properties>
        <jobsToTest>3</jobsToTest>
    </properties>


    <build>
        <plugins>

            <plugin>
                <groupId>com.github.goldin</groupId>
                <artifactId>jenkins-maven-plugin</artifactId>
                <version>${plugins-version}</version>
                <executions>
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <!-- http://evgeny-goldin.org/youtrack/issue/pl-642                 -->
                    <!-- "Provide access to all jobs for a Groovy snippet in <process>" -->
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <execution>
                        <id>http://evgeny-goldin.org/youtrack/issue/pl-642</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${configs-outputDirectory}</outputDirectory>
                            <generationPom>https://github.com/evgeny-goldin/maven-plugins-test/blob/master/jenkins-maven-plugin/issues/0.2.5.1/pom.xml</generationPom>
                            <jenkinsUrl>http://evgeny-goldin.org/jenkins</jenkinsUrl>
                            <timestamp>false</timestamp>
                            <jobs>
                                <job>
                                    <id>pl-642-1</id>
                                    <scmType>git</scmType>
                                    <mavenName>apache-maven-3</mavenName>
                                    <repository>
                                        <remote>${maven-plugins-repo}</remote>
                                    </repository>
                                </job>
                                <job>
                                    <id>pl-642-2</id>
                                    <scmType>git</scmType>
                                    <mavenName>apache-maven-3</mavenName>
                                    <repository>
                                        <remote>${maven-plugins-repo}</remote>
                                    </repository>
                                </job>
                                <job>
                                    <id>pl-642-3</id>
                                    <scmType>git</scmType>
                                    <mavenName>apache-maven-3</mavenName>
                                    <repository>
                                        <remote>${maven-plugins-repo}</remote>
                                    </repository>
                                    <process>
                                    {{
                                        assert job
                                        assert jobs
                                        assert jobs.size()     == 3
                                        assert jobs.first().id == 'pl-642-1'
                                        assert job.id          == 'pl-642-3'
                                    }}
                                    </process>
                                </job>
                            </jobs>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
