<?xml version="1.0" encoding="UTF-8"?>

<project xmlns              = "http://maven.apache.org/POM/4.0.0"
         xmlns:xsi          = "http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation = "http://maven.apache.org/POM/4.0.0
                               http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.github.goldin.maven-plugins-test</groupId>
    <artifactId>jenkins-maven-plugin.issues-0.2.5.1</artifactId>
    <packaging>pom</packaging>
    <version>0.1-SNAPSHOT</version>
    <name>[${project.groupId}:${project.artifactId}:${project.version}]</name>


    <parent>
        <groupId>com.github.goldin.maven-plugins-test</groupId>
        <artifactId>jenkins-maven-plugin.issues</artifactId>
        <version>0.1-SNAPSHOT</version>
    </parent>


    <properties>
        <jobsToTest>6</jobsToTest>
    </properties>


    <build>
        <plugins>

            <plugin>
                <groupId>com.github.goldin</groupId>
                <artifactId>jenkins-maven-plugin</artifactId>
                <version>${plugins-version}</version>
                <executions>
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <!-- http://evgeny-goldin.org/youtrack/issue/pl-642                 -->
                    <!-- "Provide access to all jobs for a Groovy snippet in <process>" -->
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <execution>
                        <id>http://evgeny-goldin.org/youtrack/issue/pl-642</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <jobs>
                                <job>
                                    <id>pl-642-1</id>
                                    <mavenName>apache-maven-3</mavenName>
                                    <repository>
                                        <remote>${maven-plugins-repo}</remote>
                                    </repository>
                                </job>
                                <job>
                                    <id>pl-642-2</id>
                                    <mavenName>apache-maven-3</mavenName>
                                    <repository>
                                        <remote>${maven-plugins-repo}</remote>
                                    </repository>
                                </job>
                                <job>
                                    <id>pl-642-3</id>
                                    <mavenName>apache-maven-3</mavenName>
                                    <repository>
                                        <remote>${maven-plugins-repo}</remote>
                                    </repository>
                                    <process>
                                    {{
                                        assert job
                                        assert jobs
                                        assert jobs.size()     == 3
                                        assert jobs.first().id == 'pl-642-1'
                                        assert job.id          == 'pl-642-3'
                                    }}
                                    </process>
                                </job>
                            </jobs>
                        </configuration>
                    </execution>
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <!-- http://evgeny-goldin.org/youtrack/issue/pl-645  -->
                    <!-- "Support for more than one 'process' script"    -->
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <execution>
                        <id>http://evgeny-goldin.org/youtrack/issue/pl-645</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <jobs>
                                <job>
                                    <id>pl-645-1</id>
                                    <mavenName>apache-maven-3</mavenName>
                                    <repository>
                                        <remote>${maven-plugins-repo}</remote>
                                    </repository>
                                    <processes>
                                        <!-- http://groovy.codehaus.org/gapi/groovy/util/Node.html -->
                                        <process>{{ node.remove( node.reporters ) }}</process>
                                        <process>${project.basedir}/src/main/groovy/job-update-1.groovy</process>
                                        <process>${project.basedir}/src/main/groovy/job-update-2.groovy</process>
                                        <process>{{ node.remove( node.runPostStepsIfResult ) }}</process>
                                    </processes>
                                </job>
                            </jobs>
                        </configuration>
                    </execution>
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <!-- http://evgeny-goldin.org/youtrack/issue/pl-647  -->
                    <!-- "Inheritance doesn't always work as expected"   -->
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <execution>
                        <id>http://evgeny-goldin.org/youtrack/issue/pl-647</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <jobs>
                                <job>
                                    <id>pl-647-base</id>
                                    <abstract>true</abstract>
                                    <jobType>free</jobType>
                                    <mavenName>apache-maven-3</mavenName>
                                </job>
                                <job>
                                    <id>pl-647-github</id>
                                    <parent>pl-647-base</parent>
                                    <abstract>true</abstract>
                                </job>
                                <job>
                                    <id>pl-647-plugins</id>
                                    <parent>pl-647-base</parent>
                                    <jobType>maven</jobType>
                                    <repository>
                                        <remote>${maven-plugins-repo}</remote>
                                    </repository>
                                </job>
                            </jobs>
                        </configuration>
                    </execution>
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <!-- http://evgeny-goldin.org/youtrack/issue/pl-655  -->
                    <!-- "Provide a way not to assign a job to any node" -->
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <execution>
                        <id>http://evgeny-goldin.org/youtrack/issue/pl-655</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <jobs>
                                <job>
                                    <id>pl-655-base</id>
                                    <abstract>true</abstract>
                                    <jobType>maven</jobType>
                                    <mavenName>apache-maven-3</mavenName>
                                </job>
                                <job>
                                    <id>pl-655-1</id>
                                    <parent>pl-655-base</parent>
                                    <repository>
                                        <remote>${maven-plugins-repo}</remote>
                                    </repository>
                                </job>
                                <job>
                                    <id>pl-655-2</id>
                                    <jobType>maven</jobType>
                                    <mavenName>apache-maven-3</mavenName>
                                    <node>master</node>
                                    <repository>
                                        <remote>${maven-plugins-repo}</remote>
                                    </repository>
                                </job>
                            </jobs>
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <generationPom>https://github.com/evgeny-goldin/maven-plugins-test/blob/master/jenkins-maven-plugin/issues/0.2.5.1/pom.xml</generationPom>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
