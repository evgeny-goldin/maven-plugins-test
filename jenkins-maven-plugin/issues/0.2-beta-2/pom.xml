<?xml version="1.0" encoding="UTF-8"?>

<project xmlns              = "http://maven.apache.org/POM/4.0.0"
         xmlns:xsi          = "http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation = "http://maven.apache.org/POM/4.0.0
                               http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.github.goldin.maven-plugins-test</groupId>
    <artifactId>jenkins-maven-plugin.issues-0.2-beta-2</artifactId>
    <packaging>pom</packaging>
    <version>0.1-SNAPSHOT</version>
    <name>[${project.groupId}:${project.artifactId}:${project.version}]</name>


    <parent>
        <groupId>com.github.goldin.maven-plugins-test</groupId>
        <artifactId>jenkins-maven-plugin.issues</artifactId>
        <version>0.1-SNAPSHOT</version>
    </parent>


    <properties>
        <jobsToTest>1</jobsToTest>
    </properties>


    <build>
        <plugins>

            <plugin>
                <groupId>com.github.goldin</groupId>
                <artifactId>jenkins-maven-plugin</artifactId>
                <version>${plugins-version}</version>
                <executions>
                    <execution>
                        <id>generate-jenkins-jobs</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <jobs>
                                <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                                <!-- http://evgeny-goldin.org/youtrack/issue/pl-18 -->
                                <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                                <job>
                                    <id>pl-18</id>
                                    <archivingDisabled>false</archivingDisabled>
                                    <mavenName>apache-maven-3</mavenName>
                                    <jdkName>jdk1.6.0</jdkName>
                                    <privateRepository>false</privateRepository>
                                    <repository>
                                        <remote>${maven-plugins-repo}</remote>
                                    </repository>
                                </job>
                            </jobs>
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <generationPom>https://github.com/evgeny-goldin/maven-plugins-test/blob/master/jenkins-maven-plugin/issues/0.2-beta-2/pom.xml</generationPom>
                </configuration>
            </plugin>

        </plugins>
    </build>

</project>
